{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ SITENAME }} JSON",
    "home_page_url": "{{ SITEURL }}",
    "feed_url": "{{ SITEURL }}/api/feed.json",
    "author": "{{ AUTHOR }}",
    "items": [
	{% for article in articles %}{% if loop.index < 11 %}
        {
            "id": "{{ article.url }}",
            "url": "{{ SITEURL }}/{{ article.url }}",
            "title": "{{ article.title }}",
            "content_html": "{{ article.content|e }}",
            "date_published": "{{ article.date }}",
            "author": "{{ article.author }}"
        }{% if not loop.last and loop.index < 10 %}, {% endif %}
    {% endif %}{% endfor %}]
}